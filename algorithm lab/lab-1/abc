
#include <iostream>
using namespace std;

int findSquareRoot(int n) {
    int start = 0, end = n, ans = 0;

    while (start <= end) {
        int mid = start + (end - start) / 2;

        if (mid * mid == n) {
            return mid; // Exact square root found
        } else if (mid * mid < n) {
            ans = mid; // Update answer
            start = mid + 1;
        } else {
            end = mid - 1;
        }
    }

    return ans; // Return the largest integer x such that x^2 <= n
}

int main() {
    int n;
    cout << "Enter a non-negative integer: ";
    cin >> n;

    int result = findSquareRoot(n);
    cout << "The largest integer x such that x^2 <= " << n << " is: " << result << endl;

    return 0;
}

